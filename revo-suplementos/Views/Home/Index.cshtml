@model IEnumerable<revo_suplementos.Models.Produto>
@{
    ViewData["Title"] = "Home";
}

<!-- HERO -->
<section class="h-screen bg-[url('https://images.unsplash.com/photo-1598971639058-874df56d7c5a?auto=format&fit=crop&w=1400&q=80')] bg-cover bg-center flex items-center justify-center">
    <div class="text-center text-white bg-black bg-opacity-50 p-8 rounded-xl">
        <h2 class="text-5xl font-extrabold mb-4">Transforme seu corpo com AlphaSupps</h2>
        <p class="text-lg mb-6">Suplementos de alta performance para quem leva o treino a sério 💪</p>
        <a href="#produtos" class="bg-amber-500 hover:bg-amber-600 text-white px-6 py-3 rounded-lg text-lg font-semibold transition">Ver Produtos</a>
    </div>
</section>

<!-- PRODUTOS -->
<section id="produtos" class="py-20 max-w-6xl mx-auto px-6">
    <h3 class="text-3xl font-bold text-center mb-12">Nossos Suplementos</h3>
    <div class="grid md:grid-cols-3 gap-10">
        @foreach (var produto in Model)
        {
            <div class="bg-white p-6 rounded-2xl shadow-lg text-center">
                <img src="@produto.ImagemUrl" alt="@produto.Nome" class="rounded-xl mb-4 w-full h-48 object-cover" />
                <h4 class="text-xl font-bold mb-2">@produto.Nome</h4>
                <p class="text-gray-600 mb-4">@produto.Descricao</p>
                <span class="block text-amber-600 font-bold text-lg mb-4">@produto.Preco.ToString("C")</span>
                <button class="bg-amber-500 text-black px-5 py-2 rounded-lg hover:bg-amber-600 transition">Comprar</button>
            </div>
        }
    </div>
</section>

<!-- BENEFÍCIOS -->
<section id="beneficios" class="bg-amber-50 py-20">
    <div class="max-w-5xl mx-auto px-6 text-center">
        <h3 class="text-3xl font-bold mb-10">Por que escolher AlphaSupps?</h3>
        <div class="grid md:grid-cols-3 gap-8">
            <div>
                <h4 class="text-xl font-semibold mb-2">✅ Qualidade Premium</h4>
                <p class="text-gray-600">Produtos testados e aprovados por atletas.</p>
            </div>
            <div>
                <h4 class="text-xl font-semibold mb-2">⚡ Resultados Rápidos</h4>
                <p class="text-gray-600">Fórmulas otimizadas para máximo desempenho.</p>
            </div>
            <div>
                <h4 class="text-xl font-semibold mb-2">📦 Entrega Rápida</h4>
                <p class="text-gray-600">Receba seus suplementos em poucos dias.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA FINAL -->
<section id="contato" class="py-20 bg-gray-900 text-center text-white">
    <h3 class="text-3xl font-bold mb-6">Pronto para elevar seu treino?</h3>
    <p class="text-gray-300 mb-8">Garanta seus suplementos AlphaSupps e sinta a diferença.</p>
    <a href="#produtos" class="bg-amber-500 hover:bg-amber-600 text-white px-8 py-3 rounded-lg text-lg font-semibold transition">Comprar Agora</a>
</section>
